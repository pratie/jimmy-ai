# ===== AI/LLM Provider Configuration =====
# OpenAI (Required - primary provider)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# KIE API Configuration
# Server-side key only; client calls go through /api/upload proxy
KIE_API_KEY=your-kie-api-key-here

# NodeMailer Configuration
NODE_MAILER_EMAIL=your-email@gmail.com
NODE_MAILER_GMAIL_APP_PASSWORD=your-app-password

# Pusher Configuration
# Server (do not expose these in NEXT_PUBLIC*)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=ap2

# Client (safe to expose)
NEXT_PUBLIC_PUSHER_APP_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_APP_CLUSTER=ap2

# Clerk Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key-here
CLERK_SECRET_KEY=sk_test_your-key-here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# Dodo Payments Configuration
DODO_API_KEY=your-dodo-api-key
DODO_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_DODO_API_URL=https://api.dodopayments.com

# Dodo Product IDs - Monthly Subscriptions
DODO_PRODUCT_ID_STARTER=pdt_your-product-id
DODO_PRODUCT_ID_PRO=pdt_your-product-id
DODO_PRODUCT_ID_BUSINESS=pdt_your-product-id

# Dodo Product IDs - Yearly Subscriptions
DODO_PRODUCT_ID_STARTER_YEARLY=pdt_your-product-id
DODO_PRODUCT_ID_PRO_YEARLY=pdt_your-product-id
DODO_PRODUCT_ID_BUSINESS_YEARLY=pdt_your-product-id

# Firecrawl Configuration
FIRECRAWL_API_KEY=fc-your-api-key
FIRECRAWL_API_URL=https://api.firecrawl.dev/v2

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_RETURN_URL=http://localhost:3000/settings

# Supabase Configuration - DEVELOPMENT DATABASE
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Prisma Configuration - DEVELOPMENT DATABASE
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# Anthropic Claude (Optional - for Claude models)
# Get your key from: https://console.anthropic.com/
# Supports: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Google Gemini (Optional - for Gemini models)
# Get your key from: https://aistudio.google.com/app/apikey
# Supports: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
GOOGLE_GENERATIVE_AI_API_KEY=AIza-your-key-here

